  list-style: none;
}
</style>
</head>
<body>
<h1>Recent Peeps</h1>
<form>
<ul>
<div>
<li>
  <% @posts.each do |peep| %>
    <h3>name: <%= peep.author %> </h3>
   <h3>message: <%= peep.message %> </h3>
    <br>
  <% end %>
  </li>
</div>
</form>
